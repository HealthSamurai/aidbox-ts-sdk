{
	"name": "@health-samurai/react-components",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"files": [
		"dist",
		"src"
	],
	"exports": {
		".": "./dist/src/index.js",
		"./bundle.css": "./dist/bundle.css",
		"./css": "./dist/src/index.css",
		"./deps.css": "./dist/src/deps.css",
		"./full.css": "./dist/src/full.css"
	},
	"scripts": {
		"build": "rm -rf dist && mkdir -p dist && copyfiles -e '**/*.ts' -e '**/*.tsx' 'src/**' dist && tsc -b --force && tailwindcss --cwd ./src -i ./full.css -o ../dist/bundle.css && echo success",
		"build-storybook": "storybook build",
		"format": "biome format",
		"format:check": "biome format",
		"format:fix": "biome format --write",
		"lint": "biome check",
		"lint:check": "biome check",
		"lint:fix": "biome check --write",
		"storybook": "storybook dev -p 6006"
	},
	"dependencies": {
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@storybook/addon-docs": "^9.1.1",
		"@storybook/react-vite": "^9.1.1",
		"@tailwindcss/cli": "^4.1.11",
		"@tailwindcss/vite": "^4.1.11",
		"@types/node": "^24.2.0",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react-swc": "^3.10.2",
		"copyfiles": "^2.4.1",
		"storybook": "^9.1.1",
		"tailwindcss": "^4.1.11",
		"typescript": "~5.8.3",
		"vite": "^7.0.4"
	}
}
